{
  "name": "fluent-kafka-events",
  "version": "0.1.0",
  "description": "A fluent API for building and publishing Kafka messages with TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf ./dist && tsc && pnpm run copy-build",
    "clean": "rimraf ./dist",
    "copy-build": "copyfiles -u 1 package.json README.md LICENSE dist/",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration:local": "ts-node-dev --transpile-only -r tsconfig-paths/register tests/integration/test.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "kafkajs": "^2.2.4",
    "lodash": "^4.17.21",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.0",
    "aws-msk-iam-sasl-signer-js": "^1.0.0",
    "dotenv": "^16.3.1",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.8.10",
    "copyfiles": "^2.4.1",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6",
    "@vitest/coverage-v8": "^0.34.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/fluent-kafka-events.git"
  },
  "keywords": [
    "kafka",
    "event",
    "message",
    "builder",
    "fluent",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
